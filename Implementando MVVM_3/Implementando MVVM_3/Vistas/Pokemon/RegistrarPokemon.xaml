<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Implementando_MVVM_3.Vistas.Pokemon.RegistrarPokemon"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="80,*"
           BackgroundColor="#1d1d1d">

        <StackLayout Orientation="Horizontal" Padding="15">

            <Image Source="Regresar.png" WidthRequest="40"></Image>
            <Image Source="https://i.ibb.co/9NcpWfW/Iconopokemon.png" HorizontalOptions="CenterAndExpand"></Image>
            <Image Source="https://i.ibb.co/dpTQ8bz/pokemonbola.png"></Image>
            
            
        </StackLayout>
        
        <StackLayout Grid.Row="1" Margin="10">

            <StackLayout Orientation="Horizontal">

                <Label Text="Nombre:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el Nombre"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnombre}"/>

            </StackLayout>

            <StackLayout Orientation="Horizontal">
                
                <Label Text="Color de fondo:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el color fondo"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                       HorizontalOptions="StartAndExpand"
                      Text="{Binding Txtcolorfondo}"/>

             </StackLayout>

            <StackLayout Orientation="Horizontal">

                <Label Text="Número:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el número"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnro}"/>

            </StackLayout>

            <StackLayout Orientation="Horizontal">

                <Label Text="Icono:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el icono"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txticono}"/>

            </StackLayout>


            <StackLayout Orientation="Horizontal">

                <Label Text="Poder:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el poder"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtpoder}"/>

            </StackLayout>

            <StackLayout Orientation="Horizontal">

                <Label Text="Color poder:"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                       FontSize="18"/>
                <Entry Placeholder="Ingrese el color  poder"
                        FontAttributes="Bold"
                        TextColor="#ffeb72"
                        PlaceholderColor="White"
                        TextTransform="Lowercase"
                       HorizontalOptions="StartAndExpand"
                        Text="{Binding Txtcolorpoder}"/>

            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                
                <Image Source="https://i.ibb.co/PtvQdvL/ojo.png"
                       HeightRequest="20"/>

                <Label Text="Vista Previa" 
                       FontSize="20"
                       TextColor="White"
                       FontAttributes="Italic"
                       VerticalOptions="Center"/>

            </StackLayout>

            <Grid RowDefinitions="100, *" Margin="0,10,0,0"> 
                
                <Frame Grid.Row="1" 
                       WidthRequest="250" 
                       HorizontalOptions="Center"
                       CornerRadius="15" 
                       Margin="0,-38,0,0" 
                       BackgroundColor="{Binding Txtcolorfondo}">
                    
                    <StackLayout Margin="0,70,0,0">

                        <Label Text="{Binding Txtnro}"  TextColor="Black"/>

                        <Label Text="{Binding Txtnombre}"
                               CharacterSpacing="1"
                               FontSize="20"
                               TextColor="Black"
                               Margin="0,0,0,10"/>

                        <Button Text="{Binding Txtpoder}" 
                                CornerRadius="30"
                                HorizontalOptions="Start"
                                TextTransform="None"
                                HeightRequest="40"
                                BackgroundColor="{Binding Txtcolorpoder}"/>



                    </StackLayout>
                    
                </Frame>
                <Image Source="{Binding Txticono}"
                       Grid.RowSpan="2"
                       HeightRequest="160"
                       VerticalOptions="StartAndExpand"/>

            </Grid>

            <Frame HorizontalOptions="Center"
                   Padding="6"
                   Margin="0,10,0,0"
                   CornerRadius="15"
                   HasShadow="False"
                   BackgroundColor="#FEC100">

                <Button Text="+"
                        HorizontalOptions="Center"
                        BackgroundColor="#FEC100"
                        BorderColor="#FFE488"
                        BorderWidth="6"
                        FontAttributes="Bold"
                        CornerRadius="15"
                        FontSize="25"
                        WidthRequest="60"
                        HeightRequest="60"
                        Command="{Binding InsertarCommand}">
                    
                </Button>
                
            </Frame>
            
        </StackLayout>
                
    </Grid>
        
</ContentPage>